@using Microsoft.AspNetCore.Identity
@using iParking.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@section Styles {
    @if(User.IsInRole("Admin"))
    {
        <style>
            a {
                color:white
            }
        </style>
    }
}
@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">@UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Ieșire</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Înregistrare</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Logare</a></li>
    </ul>
}
