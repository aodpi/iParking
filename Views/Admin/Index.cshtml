@model IEnumerable<iParking.Models.Parking>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h2>Parcări</h2>

    <p>
        <a asp-action="Create">Creare</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ParkingName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ParkingNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ParkingSlots)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PricePerHour)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParkingName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParkingNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParkingSlots)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PricePerHour)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Redactare</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Detalii</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Ștergere</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>